@model IEnumerable<dnevnik.Models.Teachers>

<link rel="stylesheet" href="@Url.Content("~/Content/styles/table.css")">
<h1>Наш преподавательский состав</h1>

<ul>

    @foreach (dnevnik.Models.Teachers teacher in Model)
    {
    <li>
        @Html.ActionLink(@teacher.lastname +" "+@teacher.firstname+" "+ @teacher.patronymic, "Teachers", "Shool", new { teacherId = teacher.TeacherId }, new { title = "Посмотреть информацию об учителе",@class = "link" })
    </li>
    }

</ul>