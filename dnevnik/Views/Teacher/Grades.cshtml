
@model IEnumerable<dnevnik.Models.Grades>

<h1>Управление классами</h1>
<table class="table">
    <tr>
        <th><p>Класс</p></th>
        <th><p>Классный руководитель</p></th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach (dnevnik.Models.Grades gr in Model)
    {
        string name = gr.Teachers.lastname + " " + @gr.Teachers.firstname.ToString().Substring(0, 1) + "." + @gr.Teachers.patronymic.ToString().Substring(0, 1) + ".";
        <tr>
            <td>
                @gr.name
            </td>
            <td>
                @name
            </td>
            <td>
                @Html.ActionLink("Удалить класс", "DeleteGrade", new { gradeId = gr.GradeId }, new { title = "Удалить данный класс", @class = "link" })
            </td>

            <td>
                @Html.ActionLink("Удалить ученика", "deleteStudents", new { gradeId = gr.GradeId },new { title = "Удалить информацию об ученике", @class = "link" })
            </td>
            @*<td>
                    @Html.ActionLink("Редактировать данные","EditGrades", new {gradeId=gr.GradeId}, new { title="Изменить информацию  данном классе"})
                </td>*@
        </tr>
    }
</table>
@Html.ActionLink("Добавить класс", "addGrade", new { }, new { title = "Добавить новый класс", @class = "link" })<br />
@Html.ActionLink("Добавить ученика", "addStudent", new { }, new { title = "Добавить информацию о новом ученике", @class = "link" })
